# Volteec Backend (BETA) - Environment Template
# Copy this file to ".env" and fill in required values.

# Database Configuration (Docker Compose local)
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USERNAME=volteec_user
DATABASE_PASSWORD=volteec_password
DATABASE_NAME=volteec_db
# Local Docker: disable TLS (the default postgres container does not enable TLS).
# Production: set DATABASE_TLS_MODE=require and enable TLS on your Postgres server.
DATABASE_TLS_MODE=disable

# API Authentication (REQUIRED)
API_TOKEN=REPLACE_WITH_SECURE_RANDOM_TOKEN

# Device Token Encryption (REQUIRED)
# AES-256 key (base64, 32 bytes)
DEVICE_TOKEN_KEY=REPLACE_WITH_BASE64_32_BYTES

# Relay Configuration (REQUIRED for push notifications)
# Beta uses sandbox relay. Credentials are provided by Volteec.
RELAY_URL=https://dev-api.volteec.com/v1
# Shared beta tenant ID (provided by Volteec)
RELAY_TENANT_ID=4970ad4f-69df-41ff-8f56-e36e88bc6e32
# Secret is provided by Volteec (beta)
RELAY_TENANT_SECRET=REPLACE_WITH_TENANT_SECRET
# Generate a stable UUID once per backend instance (uuidgen)
RELAY_SERVER_ID=REPLACE_WITH_SERVER_ID
RELAY_ENVIRONMENT=sandbox

